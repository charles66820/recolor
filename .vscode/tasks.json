{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cppcheck",
            "type": "shell",
            "command": "cppcheck --enable=all --xml-version=2 -I ../include *.c 2> report.xml && cppcheck-htmlreport --source-dir=. --report-dir=report --file=report.xml && google-chrome report/index.html",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "mkbuild",
            "type": "shell",
            "command": "mkdir ${workspaceRoot}/build -p",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "cmake",
            "type": "shell",
            "command": "cmake ${workspaceRoot}",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "presentation": {
                "reveal": "silent"
            },
            "dependsOn": [
                "mkbuild"
            ]
        },
        {
            "label": "make",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "presentation": {
                "reveal": "silent"
            },
            "dependsOn": [
                "cmake"
            ]
        },
        {
            "label": "build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "presentation": {
                "reveal": "silent"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "make"
            ]
        }
    ]
}